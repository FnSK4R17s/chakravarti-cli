# Chakravarti Agent Container
# Contains Claude Code CLI for sandboxed agent execution

FROM node:22-slim

# Install dependencies and Claude Code CLI
RUN apt-get update && apt-get install -y \
    git \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Create /home/claude directory with open permissions
# This allows the container to run as any host user while using this home directory
RUN mkdir -p /home/claude/.claude && \
    chmod -R 777 /home/claude

# Create workspace directory with open permissions
RUN mkdir -p /workspace && chmod 777 /workspace

WORKDIR /workspace

# Verify Claude is installed (as root, before switching)
RUN claude --version || true

# Default command
CMD ["/bin/bash"]
